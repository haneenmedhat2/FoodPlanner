<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:elevation="20dp"
    android:backgroundTint="#F6EFEF"
    app:cardPreventCornerOverlap="true"
    android:id="@+id/in_card"
    app:cardCornerRadius="20dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F8F6F6">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageIngredient"
            android:layout_width="144dp"
            android:layout_height="153dp"
            android:src="@drawable/chandlerjpg"
            app:civ_border_color="#EAE3E3"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toTopOf="@+id/tvIngredientType"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvIngredientType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="Foooood"
            android:fontFamily="@font/croissant_one"
            android:textAlignment="center"
            android:textColor="#DA4F4F"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageIngredient"
            tools:targetApi="ice_cream_sandwich" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>