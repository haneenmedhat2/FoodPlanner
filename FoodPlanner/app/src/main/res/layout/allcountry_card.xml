<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:id="@+id/allCountryCard"
    android:elevation="20dp"
    android:backgroundTint="#F6EFEF"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="20dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#F8F6F6">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageAllCountry"
            android:layout_width="144dp"
            android:layout_height="153dp"
            android:src="@drawable/chandlerjpg"
            app:civ_border_color="#EAE3E3"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toTopOf="@+id/tvCountryType"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvCountryType"
            android:layout_width="173dp"
            android:layout_height="51dp"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="Foooood"
            android:textAlignment="center"
            android:textColor="@color/secondary"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.285"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageAllCountry"
            tools:targetApi="ice_cream_sandwich" />

        <ImageButton
            android:id="@+id/removefav"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/favoritesolid"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.36"
            app:layout_constraintStart_toEndOf="@+id/tvCountryType" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>